.container {
  border: 1px solid black;
  margin: 60px auto;
  width: 1050px;
  height: 550px;
  background-color: white;
  margin-top: 0px;
}

.nav-container {
  width: 1048px;
  height: 55px;
  background-color: #e43927;
  margin-left: -16px;
}
.nav-text {
  color: #e43927;
  margin-left: 20px;
  padding-top: 16px;
  font-size: 20px;
}
.input-text {
  font-size: 18px;
  font-family: Roboto, sans-serif;
  color: black;
}
.input-border {
  display: block;
  width: 100%;
  height: calc(1.5em + 0.75rem + 2px);
  padding: 0.375rem 0.75rem;
  font-size: 1rem;
  font-weight: 400;
  line-height: 1.5;
  color: #495057;
  background-color: white;
  background-clip: padding-box;
  border: 0px;
  /* border-radius: 0.25rem; */
  transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
}

.button {
  width: 130px;
  height: 42px;
  color: #fff;
  background: #e43927;
  border-radius: 50px;
  font-size: 14px;
  text-transform: uppercase;
  font-family: Roboto, sans-serif;
  font-weight: 600;
  cursor: pointer;
  border: 2px solid #e43927;
  transition: 0.5s;
  letter-spacing: 1.2px;
}
.logo-img {
  width: 190px;
