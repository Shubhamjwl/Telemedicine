<div class="sample form-group" style="background-color: white">
  <div
    class="row"
    style="
      margin-left: 0%;
      background-color: #e43927;
      height: 149px;
      width: 100%;
    "
  >
    <p class="nav-text">Partner Application</p>
  </div>
  <div style="margin-top: 6%; padding: 5px">
    <div class="row" style="margin-left: 2%">
      <div
        class="col-4 col-lg-2 lable"
        style="padding-left: 0% !important; padding-right: 0% !important"
      >
        <p class="mt-1 input-text"><b>Your ABHA ID:</b></p>
      </div>
      <div
        class="col-8 col-lg-8"
        style="padding-left: 0% !important; padding-right: 0% !important"
      >
        <p class="input-text" style="margin-top: 1%">
          {{ healthId ? healthId : "NA" }}
        </p>
      </div>
    </div>

    <div class="row" style="margin-left: 2%">
      <div
        class="col-5 col-lg-3 lable"
        style="padding-left: 0% !important; padding-right: 0% !important"
      >
        <p class="input-text"><b>Your ABHA Address:</b></p>
      </div>
      <div
        class="col-6 col-lg-8"
        style="padding-left: 0% !important; padding-right: 0% !important"
      >
        <p class="input-text">
          {{ abhaAddress ? abhaAddress : "NA" }}
        </p>
      </div>
    </div>

    <div
      class="row"
      style="margin-top: 4%; margin-left: 1%; margin-bottom: 11%"
    >
      <div class="col-2"></div>
      <div class="col-3">
        <button
          class="btn mr-3 dwnld-btn"
          style="
            width: 130px;
            height: 42px;
            color: #fff;
            background: #e43927;
            border-radius: 31px;
            font-size: 0.875rem;
            text-transform: uppercase;
            font-family: Roboto, sans-serif;
            font-weight: 600;
            cursor: pointer;
            border: 2px solid #e43927;
            transition: 0.5s;
            letter-spacing: 0.2px;
          "
          (click)="showForm()"
        >
          CREATE ABHA
        </button>
      </div>
      <div class="col-3 col-lg-3">
        <button
          class="btn mr-3 link-dwnld-btn"
          style="
            margin-left: 65%;
            width: 130px;
            height: 42px;
            color: #fff;
            background: #e43927;
            border-radius: 31px;
            font-size: 0.875rem;
            text-transform: uppercase;
            font-family: Roboto, sans-serif;
            font-weight: 600;
            cursor: pointer;
            border: 2px solid #e43927;
            transition: 0.5s;
            letter-spacing: 0.2px;
          "
          (click)="showProfile()"
          [disabled]="!mobileNo"
        >
          LINK ABHA
        </button>
      </div>
    </div>

    <div class="row" *ngIf="show" style="margin-left: 5%">
      <form form #userForm="ngForm" (ngSubmit)="onSubmit()">
        <div class="row">
          <div class="col-3 col-lg-3 lable">
            <p class="input-text">Enter Name<span class="error">*</span></p>
          </div>
          <div class="col-9 col-lg-9">
            <div class="form-group">
              <input
                type="text"
                [(ngModel)]="lastName"
                class="input-border input"
                name="lname"
                autocomplete="disabled"
                placeholder="Last Name"
                style="
                  width: 26%;
                  display: inline-block;
                  border-bottom: 1px solid #e43927 !important;
                "
              />
              <input
                type="text"
                [(ngModel)]="firstName"
                name="fname"
                autocomplete="disabled"
                #fname="ngModel"
                class="input-border mr-1 input"
                placeholder="First Name"
                required
                style="
                  width: 26%;
                  display: inline-block;
                  margin-left: 15px;
                  border-bottom: 1px solid #e43927 !important;
                "
              />
              <input
                type="text"
                [(ngModel)]="middleName"
                name="mname"
                autocomplete="disabled"
                class="input-border mr-1 input"
                placeholder="Middle Name"
                style="
                  width: 25%;
                  display: inline-block;
                  margin-left: 15px;
                  border-bottom: 1px solid #e43927 !important;
                "
              />
            </div>
            <div class="error" [hidden]="fname.valid || fname.untouched">
              Enter Valid Name
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-3 col-lg-3 lable">
            <p class="input-text">
              Enter Mobile Number<span class="error">*</span>
            </p>
          </div>
          <div class="col-8 col-lg-8">
            <div class="form-group">
              <input
                type="text"
                name="mobilePrifix"
                [readonly]="isMobileNoDisabled"
                class="input-border mr-2 mobile-pre"
                placeholder="+91"
                style="
                  display: inline-block;
                  border-bottom: 1px solid #e43927 !important;
                "
              />
              <input
                type="text"
                name="mobileNo"
                #mobileNo="ngModel"
                [(ngModel)]="mobileNoSel"
                maxlength="10"
                pattern="{{ PATTERN.MOBILE_NUMBER }}"
                class="input-border mobile-post"
                placeholder="Mobile Number"
                style="
                  display: inline-block;
                  border-bottom: 1px solid #e43927 !important;
                "
                required
              />
            </div>
            <div class="error" [hidden]="mobileNo.valid || mobileNo.untouched">
              Enter Valid Number.
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-3 col-lg-3 lable">
            <p class="input-text">Gender<span class="error">*</span></p>
          </div>
          <div class="col-3 col-lg-3">
            <div class="form-group">
              <select
                [(ngModel)]="selectedOption"
                name="gender"
                #gender="ngModel"
                class="input-border"
                style="
                  width: 270%;
                  display: inline-block;
                  background-color: white;
                  height: 31px;
                  border-bottom: 1px solid #e43927 !important;
                "
              >
                <option value=""></option>
                <br />
                <option *ngFor="let option of selectOptions" [value]="option">
                  {{ option }}
                </option>
              </select>
            </div>
            <div class="error" [hidden]="gender.valid || gender.untouched">
              Enter Gender.
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-3 col-lg-3 lable">
            <p class="input-text">Date of Birth<span class="error">*</span></p>
          </div>
          <div class="col-3 col-lg-3">
            <div class="form-group">
              <input
                type="date"
                [(ngModel)]="dateOfBirth"
                (change)="dateOfBirthSplit()"
                name="dob"
                #dob="ngModel"
                required
                class="input-border input"
                placeholder="DD/MM/YYY"
                style="
                  width: 270% !important;
                  border-bottom: 1px solid #e43927 !important;
                "
              />
            </div>
            <div class="error" [hidden]="dob.valid || dob.untouched">
              Enter Valid Date.
            </div>
          </div>
        </div>

        <div
          style="
            margin-top: 10%;
            margin-left: 1%;
            text-align: center;
            margin-bottom: 10px;
          "
        >
          <!-- <div class="col-3 col-lg-3"></div>
          <div class="col-3 col-lg-3"> -->
          <button type="submit" class="btn button mr-3">SUBMIT</button>
          <!-- </div> -->
        </div>
      </form>
    </div>
  </div>

  <div class="footer">
    <p class="footer-text">
      <span class="footer-poweredby">Powered By</span>
      <img
        class="footer-poweredby-img"
        src="assets/logo/logos.png"
        style="max-width: 119%; height: auto"
      />
    </p>
  </div>

