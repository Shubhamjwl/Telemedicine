.verify-main-div {
    margin-top: 4rem;
}

.single-row {
    width: 1000px !important;
    margin-bottom: 20px;
}

.label-text {
    color: #77797a;
    font-weight: normal;
    border: 0;
    letter-spacing: 0.9px;
}

.label-text sup {
    color: #ff0000;
    font-weight: normal;
}

.input-group input, select {
    background: none;
    padding: 7px 0 11px 0;
    margin: 0;
    width: 100%;
    line-height: 18px;
    font-size: 15px;
    width: 92%;
    border: 0;
    border-bottom: 1px solid #e0e0e0;
    float: left;
    outline: 0;
    padding-left: 0;
}

.submit-main-btn {
    border: 0;
    width: 131px;
    height: 42px;
    color: #fff;
    background: #e43927;
    border-radius: 50px;
    font-size: 15px;
    text-transform: uppercase;
    font-family: "Roboto", sans-serif;
    font-weight: 600;
    cursor: pointer;
    border: 2px solid #e43927;
    transition: 0.5s;
    letter-spacing: 1.2px;
}

.submit-main-btn.submit-main-btn2 {
    width: 130px !important;
    margin-bottom: 0;
}